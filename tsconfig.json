{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "es2017",
    "lib": ["dom", "es2017", "esnext", "es2020", "esnext.array", "esnext.asynciterable"],
    "paths": {
      "@routes/*": ["routes/*"],
      "@config": ["config"],
      "@util/*": ["util/*"],
      "@common": ["common"],
      "@interfaces": ["interfaces"]
    }
  },
  "exclude": ["dist", "node_modules", "jest.config.js", "App.js", "src/aws-exports.js", "ReactotronConfig.js"],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "__tests__/App-test.js",
    "rn-cli.config.js",
    "App.ts",
    "@types/**/*.d.ts"
  ],
  "types": []
}
